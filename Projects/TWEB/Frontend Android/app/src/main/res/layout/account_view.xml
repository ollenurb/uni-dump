<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/account_view_info_placeholder"
        android:layout_margin="12dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:elevation="4dp"
        >

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginBottom="36dp">

            <ImageView
                android:id="@+id/account_view_circle_account_person"
                android:layout_centerHorizontal="true"
                android:layout_width="112dp"
                android:padding="12dp"
                android:layout_height="112dp"
                android:layout_marginVertical="26dp"
                android:src="@drawable/ic_person_black_96dp"
                android:elevation="4dp"
                android:scaleType="fitCenter"
                android:background="@drawable/circle_shape"
                android:contentDescription="@string/image_avatar" />

            <TextView
                android:id="@+id/account_view_name"
                android:layout_below="@id/account_view_circle_account_person"
                android:textColor="@android:color/black"
                android:textSize="26sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/account_view_email"
                android:layout_marginTop="4dp"
                android:layout_below="@id/account_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/account_view_number"
                android:layout_marginTop="4dp"
                android:layout_below="@id/account_view_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="22sp"
                />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>