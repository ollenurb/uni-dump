<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="8dp"
    >

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        >

        <TextView
            android:id="@+id/courses_card_item_letter_placeholder"
            android:background="@drawable/circle_shape"
            android:textColor="@android:color/white"
            android:text="L"
            android:textSize="26sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_height="60dp"
            android:layout_width="60dp"/>

        <TextView
            android:id="@+id/courses_card_item_title_placeholder"
            android:layout_toEndOf="@id/courses_card_item_letter_placeholder"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:text="Lorem impsum dolor"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

        <TextView
            android:id="@+id/courses_card_item_static_available_professor"
            android:layout_toEndOf="@id/courses_card_item_letter_placeholder"
            android:layout_below="@id/courses_card_item_title_placeholder"
            android:layout_marginStart="12dp"
            android:textSize="18sp"
            android:text="Professors available: "
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/courses_card_item_professors_number_placeholder"
            android:layout_toEndOf="@id/courses_card_item_static_available_professor"
            android:layout_below="@id/courses_card_item_title_placeholder"
            android:textSize="18sp"
            android:text="10"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>